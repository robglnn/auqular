# Application Environment
# Options: development, production
NODE_ENV=development

# Electron Window Settings
ELECTRON_WINDOW_WIDTH=1400
ELECTRON_WINDOW_HEIGHT=900
ELECTRON_OPEN_DEVTOOLS=true

# FFmpeg Configuration
# CRF 18-28 (lower is higher quality)
FFMPEG_QUALITY_CRF=23
FFMPEG_AUDIO_CODEC=aac
FFMPEG_VIDEO_CODEC=libx264

# Export Settings
EXPORT_DEFAULT_SCALE_1080P=true
EXPORT_DEFAULT_FORMAT=mp4

# Debug and Development
# Options: silent, error, warn, info, verbose
DEBUG_LEVEL=verbose
LOG_FFMPEG_COMMANDS=true
SHOW_PERFORMANCE_METRICS=true

# Feature Flags
ENABLE_RECORDING=true
ENABLE_WEBCAM=true
ENABLE_SCREEN_CAPTURE=true

# Performance Settings
TIMELINE_MAX_CLIPS=50
PREVIEW_FPS_TARGET=30
THUMBNAIL_GENERATION_TIMEOUT=5000

# Paths
TEMP_DIR=temp
THUMBNAIL_DIR=thumbnails

# Allowed Video Extensions (comma-separated)
ALLOWED_VIDEO_EXTENSIONS=mp4,mov,avi,mkv,webm